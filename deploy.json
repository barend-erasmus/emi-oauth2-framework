{
    "machine": {
        "host": "$host",
        "username": "$username",
        "password": "$password"
    },
    "commands": [
        "npm --prefix /opt/emi-oauth2-framework install",
        "pm2 stop emi-oauth2-framework",
        "pm2 start /opt/emi-oauth2-framework/app.js --name emi-oauth2-framework -- --prod --port 8080"
    ],
    "directories": [
        {
            "source": "$workspace/dist",
            "destination": "/opt/emi-oauth2-framework"
        }
    ],
    "files": []
}